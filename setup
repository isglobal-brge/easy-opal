        echo "2. Use package manager specific to your distribution"
        echo "3. Build from source: https://github.com/FiloSottile/mkcert"
        echo "4. Re-run this script with --skip-mkcert and provide your own certificates"
        echo ""
        exit 1
    fi
fi

