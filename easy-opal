#!/usr/bin/env bash
#
# This script is a wrapper that executes the easy-opal command inside the
# project's virtual environment. It allows users to run the tool without
# having to manually activate the virtual environment.

# Ensure the script is run from the project root directory
cd "$(dirname "$0")"

VENV_PATH=".venv"

# Check if the project's virtual environment exists, created by './setup'
if [ ! -d "$VENV_PATH" ]; then
    echo "‚ùå [ERROR] Project virtual environment not found in '$VENV_PATH'."
    echo "This is created by the setup script. Please run it first:"
    echo "./setup"
    exit 1
fi

# Execute the python script using the virtual environment's Python.
# By calling the python executable directly, we avoid any 'source' issues.
"$VENV_PATH/bin/python" -m src.cli "$@" 